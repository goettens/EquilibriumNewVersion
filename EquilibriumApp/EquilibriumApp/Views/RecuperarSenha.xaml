<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquilibriumApp.Views.RecuperarSenha"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" BackgroundColor="White" VerticalOptions="CenterAndExpand">

            <Image Source="IconeOficial.png" Scale="0.7" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Label Text="Equilibrium App" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" />
            <Label Text="Digite seu e-mail para recuperar sua conta" />
            <Entry Placeholder="E-mail" Text="{Binding Email, Mode=TwoWay}"/>
            <Button Text="Recuperar" Command="{Binding RecuperarCommand}" BackgroundColor= "Orange" TextColor="White" FontAttributes="Bold" CornerRadius="15" VerticalOptions="StartAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
